        "update-parser-binary": "tsx build-scripts/compile-inline-partiql-wasm.mts"
    },
    "files": [
        "out"
    ],
    "dependencies": {
        "@aws/language-server-runtimes": "^0.2.4",
        "web-tree-sitter": "^0.22.6"
    },
    "devDependencies": {
        "@babel/plugin-transform-modules-commonjs": "^7.24.1",
        "@types/jest": "29.5.12",
        "babel-plugin-transform-import-meta": "^2.2.1",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "tsx": "^4.7.2",
        "zx": "^8.1.0"
    },
    "prettier": {
        "printWidth": 120,
        "trailingComma": "es5",
        "tabWidth": 4,
        "singleQuote": true,
        "semi": false,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "endOfLine": "lf"
    }

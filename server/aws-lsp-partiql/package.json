{
    "name": "@aws/lsp-partiql",
    "author": "Amazon Web Services",
    "license": "Apache-2.0",
    "description": "PartiQL language server",
    "version": "0.0.2",
    "repository": {
        "type": "git",
        "url": "https://github.com/aws/language-servers"
    },
    "main": "out/index.js",
    "types": "out/index.d.ts",
    "scripts": {

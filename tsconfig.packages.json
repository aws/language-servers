{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2021",
        "moduleResolution": "node",
        "lib": ["ES2022"],
        "declaration": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "composite": true
    },
    "exclude": ["node_modules"]
}

{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2022",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./out",
        "declaration": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "composite": true,
        "noImplicitOverride": true,
        "lib": ["dom", "ES2021"],
        "resolveJsonModule": true
    },
    "include": ["src", "test"],
    "exclude": ["node_modules"]
}

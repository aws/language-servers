{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": false,
  "reporter": ["text", "html", "lcov"],
  "report-dir": "coverage",
  "include": [
    "*/src/**/*.ts",
    "server/*/src/**/*.ts",
    "app/*/src/**/*.ts", 
    "core/*/src/**/*.ts",
    "client/*/src/**/*.ts",
    "chat-client/src/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts", 
    "**/test/**",
    "**/*TestConstants.ts",
    "**/*.d.ts",
    "**/node_modules/**",
    "**/out/**",
    "**/dist/**",
    "**/coverage/**",
    "**/build/**",
    "**/*.json"
  ],
  "branches": 70,
  "lines": 70,
  "functions": 70,
  "statements": 70
}
